<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notes_background"
    android:orientation="vertical"
    tools:context="com.example.android.musictheoryquiz.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/melodic_minor" />

    <ImageButton
        android:id="@+id/sound_q2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:onClick="playTheScale2"
        android:scaleType="centerCrop"
        android:src="@drawable/sound" />

    <RadioGroup
        android:id="@+id/q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <RadioButton
            android:id="@+id/q2_1"
            style="@style/RadioButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkAndGoToTheQuestion3"
            android:text="@string/major" />

        <RadioButton
            android:id="@+id/q2_2"
            style="@style/RadioButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="checkAndGoToTheQuestion3"
            android:text="@string/natural_minor" />

        <RadioButton
            android:id="@+id/q2_3"
            style="@style/RadioButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="checkAndGoToTheQuestion3"
            android:text="@string/harmonic_minor" />

        <RadioButton
            android:id="@+id/q2_4"
            style="@style/RadioButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="checkAndGoToTheQuestion3"
            android:text="@string/melodic_minor" />

    </RadioGroup>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:max="70"
        android:progress="20" />


</LinearLayout>
